<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lariboymoushakian.myfirstapp2.test">


    <ImageButton
        android:id="@+id/button24"
        android:layout_width="321dp"
        android:layout_height="116dp"
        android:text="Button1"
        android:onClick="click1"
        android:src="@drawable/beer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/button27"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-10dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/button27"
        android:layout_width="321dp"
        android:layout_height="116dp"
        android:text="Button2"
        android:onClick="click2"
        android:src="@drawable/mixed_drink"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/button26" />

    <ImageButton
        android:id="@+id/button26"
        android:layout_width="321dp"
        android:layout_height="116dp"
        android:text="Button3"
        android:onClick="click1"
        android:src="@drawable/shot"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/button25" />

    <ImageButton
        android:id="@+id/button25"
        android:layout_width="321dp"
        android:layout_height="116dp"
        android:text="Button4"
        android:onClick="click1"
        android:src="@drawable/wine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be safe and have fun"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="478dp" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_below="@+id/button27"
        android:textSize="25sp"
        android:textColor="#ff0000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="478dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/uber"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/uber"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.975" />

</android.support.constraint.ConstraintLayout>


